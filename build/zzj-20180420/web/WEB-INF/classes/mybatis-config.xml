<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE  configuration  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <!--配置别名-->
    <typeAliases>
        <!--定义 Mapper 中引用到的业务对象类的位置-->
        <package name="com.zzj.course.model"></package>
    </typeAliases>

    <!--配置 Mapper 的位置-->
    <mappers>
        <mapper resource="com/zzj/course/mapper/UserMapper.xml" />
        <mapper resource="com/zzj/course/mapper/ResourceMapper.xml" />
        <mapper resource="com/zzj/course/mapper/TypeMapper.xml" />
        <mapper resource="com/zzj/course/mapper/TypeOfNameMapper.xml" />
        <mapper resource="com/zzj/course/mapper/CommentMapper.xml" />

    </mappers>
</configuration>